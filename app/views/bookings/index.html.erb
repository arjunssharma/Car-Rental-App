<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table class="table">
  <thead>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Car</th>
    <% if current_user.user_type.in?([0, 1]) %>
        <th>Customer Email</th>
        <th>Car Status</th>
    <% end %>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.start_time %></td>
        <td><%= booking.end_time %></td>
        <td><%= Car.find_by_id(booking.car_id).model %></td>
        <% if current_user.user_type.in?([0, 1]) %>
            <td><%= User.find_by_id(booking.user_id).email %></td>
            <td><%= Car.find_by_id(booking.car_id).status %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', [booking], method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>
