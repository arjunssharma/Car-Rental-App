<h1>Book Car</h1>
<h3>Model: <%= @car.name %></h3>
<h3>Manufacturer: <%= @car.manufacturer %></h3>
<h3>Style: <%= @car.style %></h3>
<h3>Location: <%= @car.location %></h3>
<%= form_for([@car, @booking]) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class='field'>
      <%= f.label :pickup_time %><br>
      <%= f.datetime_local_field :start_time, class: "form-control" %>
    </div>
    <br />
    <div class='field'>
      <%= f.label :return_time %><br>
      <%= f.datetime_field :end_time, class: "form-control" %>
    </div>
    <br />

    <div class="field">
      <%= form.label :email_id %><br>
      <%= form.text_field :email_id %>
    </div>

    <div class="field">
      <%= form.label :phone %><br>
      <%= form.text_field :phone %>
    </div>
    <div class="field">
      <%= form.label :place %><br>
      <%= form.select :place, options_for_select(['New York, 55 East 52nd Street', 'Seattle, 2201 Westlake Avenue']),:prompt => 'Select One' %>
    </div>
    <%= form.hidden_field :car_id, :value => params[:car_id]%>
    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>